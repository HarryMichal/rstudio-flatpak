{
    "app-id" : "com.rstudio.RStudio",
    "runtime" : "org.kde.Platform",
    "runtime-version" : "5.12",
    "sdk" : "org.kde.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.openjdk8"
    ],
    "command" : "rstudio",
    "rename-icon" : "rstudio",
    "rename-desktop-file" : "rstudio.desktop",
    "finish-args" : [
        "--socket=wayland",
        "--share=ipc",
        "--socket=ssh-auth",
        "--socket=session-bus",
        "--share=network",
        "--allow=devel",
        "--device=dri",
        "--socket=cups",
        "--socket=ssh-auth",
        "--socket=session-bus",
        "--socket=system-bus",
        "--filesystem=home",
        "--filesystem=host",
        "--talk-name=org.gtk.vfs.*",
        "--talk-name=org.gnome.SessionManager",
        "--talk-name=org.freedesktop.FileManager1",
        "--talk-name=org.freedesktop.Flatpak",
        "--talk-name=org.freedesktop.Notifications",
        "--talk-name=org.freedesktop.secrets",
        "--env=QTWEBENGINE_DISABLE_SANDBOX=1"
    ],
    "build-options" : {
        "cflags" : "-O2",
        "cxxflags" : "-O2"
    },
    "cleanup" : [
        "/extras",
        "/include",
        "/lib64/pkgconfig",
        "/share/man",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name" : "boost",
            "buildsystem" : "simple",
            "build-commands" : [
                "./bootstrap.sh --without-libraries=python",
                "./b2 --without-python --prefix=/app install -j $(nproc)"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://dl.bintray.com/boostorg/release/1.69.0/source/boost_1_69_0.tar.gz",
                    "sha256" : "9a2c2819310839ea373f42d69e733c339b4e9a19deab6bfec448281554aa4dbb"
                }
            ]
        },
        {
            "name" : "R",
            "buildsystem" : "autotools",
            "config-opts" : [
                "--enable-R-shlib=yes"
            ],
            "make-args" : [
                "-j",
                "-O"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://cloud.r-project.org/src/base/R-3/R-3.5.1.tar.gz",
                    "sha256" : "0463bff5eea0f3d93fa071f79c18d0993878fd4f2e18ae6cf22c1639d11457ed"
                }
            ]
        },
        {
            "name" : "ant",
            "cleanup": [
                "*"
            ],
            "buildsystem" : "simple",
            "build-commands" : [
                "mv ./bin/* /app/bin/",
                "mkdir -p /app/etc",
                "mv ./etc/* /app/etc/",
                "mv ./lib/* /app/lib/"
            ],
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://www.apache.org/dist/ant/binaries/apache-ant-1.9.14-bin.tar.gz",
                    "sha256" : "ad6b296a76f0ad433bc6b4ebda41c3275e0dc03f0e9a6c8c299f787a5e4c3fe4"
                }
            ]
        },
        {
            "name" : "RStudio",
            "buildsystem" : "cmake",
            "config-opts" : [
                "-DFLATPAK:BOOL=true",
                "-DRSTUDIO_TARGET=Desktop",
                "-DRSTUDIO_INSTALL_FREEDESKTOP:BOOL=true",
                "-DCMAKE_BUILD_TYPE=Release",
                "-DCMAKE_INSTALL_PREFIX=/app",
                "-DQT_QMAKE_EXECUTABLE=/usr/bin/qmake"
            ],
            "make-args" : [
                "-j16"
            ],
            "build-options" : {
                "env": {
                    "JAVA_HOME" : "/usr/lib/sdk/openjdk8",
                    "RSTUDIO_VERSION_MAJOR" : "1",
                    "RSTUDIO_VERSION_MINOR" : "2",
                    "RSTUDIO_VERSION_PATCH" : "5033",
                    "RSTUDIO_GIT_REVISION_HASH" : "330255ddec489e7a147ace3e8a9a3e4157d8d5ad",
                    "GIT_COMMIT" : "330255ddec489e7a147ace3e8a9a3e4157d8d5ad"
                }
            },
            "sources" : [
                {
                    "type" : "git",
                    "url" : "https://github.com/rstudio/rstudio",
                    "tag" : "v1.2.5033"
                },
                {
                    "type": "patch",
                    "path": "0001-When-built-as-flatpak-change-freedesktop-prefix.patch"
                },
                {
                    "type": "archive",
                    "url": "https://s3.amazonaws.com/rstudio-buildtools/dictionaries/core-dictionaries.zip",
                    "sha256": "4341a9630efb9dcf7f215c324136407f3b3d6003e1c96f2e5e1f9f14d5787494",
                    "dest": "dependencies/common/dictionaries"
                },
                {
                    "type": "archive",
                    "url": "https://s3.amazonaws.com/rstudio-buildtools/mathjax-26.zip",
                    "sha256": "939a2d7f37e26287970be942df70f3e8f272bac2eb868ce1de18bb95d3c26c71",
                    "dest": "dependencies/common/mathjax-26"
                },
                {
                    "type": "archive",
                    "url": "https://s3.amazonaws.com/rstudio-buildtools/pandoc/2.3.1/pandoc-2.3.1-linux.tar.gz",
                    "sha256": "859609cdba5af61aefd7c93d174e412d6a38f5c1be90dfc357158638ff5e7059",
                    "dest": "dependencies/common/pandoc"
                },
                {
                    "type": "archive",
                    "url": "https://s3.amazonaws.com/rstudio-buildtools/gin-2.1.2.zip",
                    "sha256": "b98e704164f54be596779696a3fcd11be5785c9907a99ec535ff6e9525ad5f9a",
                    "dest": "src/gwt/lib/gin/2.1.2"
                },
                {
                    "type": "archive",
                    "url": "https://storage.googleapis.com/gwt-releases/gwt-2.8.1.zip",
                    "sha256": "0b7af89fdadb4ec51cdb400ace94637d6fe9ffa401b168e2c3d372392a00a0a7",
                    "dest": "src/gwt/lib/gwt/2.8.1"
                }
            ]
        }
    ]
}
